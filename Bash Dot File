# bashrc

# drop duplicates from history
HISTCONTROL=ignoreboth

# alias list
alias ll='ls -lah'
alias mv='mv -i'
alias rm='rm -i'
alias rmdir='rmdir -i'
alias ..='cd ..'
alias now='shutdown now'
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'

# color
alias ls='ls --color=auto'
alias grep='grep --color=auto'



