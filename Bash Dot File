# bashrc

# drop duplicates from history
HISTCONTROL=ignoreboth

# alias list
alias ll='ls -lah'
alias mv='mv -i'
alias rm='rm -i'
alias rmdir='rmdir -i'
alias ..='cd ..'

# color
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# update upgrade
alias update='sudo apt update'
alias upgrade='sudo apt upgrade'

# shutdown
alias now='shutdown now'
